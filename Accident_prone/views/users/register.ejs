<% layout('layouts/boilerplate')%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="bg-white rounded shadow">
                <div class="row g-0">
                    <div class="col-md-6" style="padding-right: 1em;">
                        <img src="https://images.unsplash.com/photo-1531564701487-f238224b7ce3?q=80&w=2574&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                            alt="" class="img-fluid rounded-left" style="margin-right: 2em;" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center" style="padding-right: 1em;">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-4">Register As User</h5>
                            <form action="/register" method="POST" class="validated-form" novalidate>
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                                    <div class="invalid-feedback">
                                        Please provide a username.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="email">Email</label>
                                    <input class="form-control" type="email" id="email" name="email" required>
                                    <div class="invalid-feedback">
                                        Please provide a valid email.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="invalid-feedback">
                                        Please provide a password.
                                    </div>
                                </div>
                                <div class="btn d-grid gap-2">
                                    <button class="btn btn-success btn-block">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
